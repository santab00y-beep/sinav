let i=0, score=0, time=1200, timer;

function startExam(){
document.getElementById("start").style.display="none";
document.getElementById("exam").style.display="block";
timer=setInterval(tick,1000);
show();
}

function tick(){
document.getElementById("timer").innerText="â± "+Math.floor(time/60)+":"+String(time%60).padStart(2,"0");
time--;
if(time<0) finish();
}

function show(){
if(i>=questions.length){finish();return;}
let q=questions[i];
document.getElementById("question").innerText=(i+1)+". "+q.q;
document.getElementById("score").innerText="Puan: "+score;
let o=document.getElementById("options");
o.innerHTML="";
q.o.forEach((t,idx)=>{
let d=document.createElement("div");
d.className="option";
d.innerText=t;
d.onclick=()=>answer(d,idx);
o.appendChild(d);
});
}

function answer(el,idx){
let q=questions[i];
document.querySelectorAll(".option").forEach(x=>x.onclick=null);
if(idx===q.a){el.classList.add("correct");score+=5;}
else{
el.classList.add("wrong");
document.querySelectorAll(".option")[q.a].classList.add("correct");
}
setTimeout(()=>{i++;show();},700);
}

function finish(){
clearInterval(timer);
document.getElementById("exam").style.display="none";
document.getElementById("end").style.display="block";
document.getElementById("final").innerText="Skorun: "+score+" / 100 ğŸ’–";
}
